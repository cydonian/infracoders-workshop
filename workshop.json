{

  "variables": {
    "guest_additions_sha256": "8f7ffee3fac75793e48d1859b65a95879b3ed5bc1c3164c967e85d69244c594b"
  },

  "builders": [

    {
      "name": "desktop",
      "type": "virtualbox-iso",

      "guest_os_type": "RedHat_64",
      "headless": false,

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "768"],
        ["modifyvm", "{{.Name}}", "--cpus",   "1"],
        ["modifyvm", "{{.Name}}", "--vram",   "10"]
      ],

      "hard_drive_interface": "sata",

      "iso_url":           "d:/isos/CentOS-7.0-1406-x86_64-DVD.iso",
      "iso_checksum":      "deadbeef",
      "iso_checksum_type": "NONE",

      "http_directory": "http",

      "boot_wait": "12s",
      "boot_command": [
        "<tab> rd.live.check=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.0-dvd-workshop_ks.cfg<enter><wait>"
      ],

      "ssh_username":     "root",
      "ssh_password":     "workshop",
      "ssh_port":         22,
      "ssh_wait_timeout": "10000s",

      "guest_additions_sha256": "{{ user `guest_additions_sha256`}}",
      "guest_additions_mode":   "attach",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",

      "vboxmanage_post": [
        ["storagectl", "{{.Name}}", "--name", "IDE Controller", "--remove"]
      ]
    },

    {
      "name":          "aws",
      "type":          "amazon-ebs",
      "source_ami":    "ami-bd523087",
      "region":        "ap-southeast-2",
      "instance_type": "m3.medium",
      "ssh_username":  "centos",
      "ami_name":      "workshop {{timestamp}}",
      "user_data_file": "userdata.yml"
  }



  ],

  "provisioners": [

    {
      "type":        "file",
      "source":      "workshop.key.pub",
      "destination": "/tmp/workshop.key.pub"
    },

    {
      "type":            "shell",
      "execute_command": "{{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant.sh"
      ]
    },

    {
      "only":    [ "desktop" ],
      "type":    "shell",
      "scripts": [
        "scripts/vboxguest.sh"
      ]
    }

  ],

  "post-processors": [{
    "only":   [ "desktop" ],
    "output": "builds/packer_{{.BuildName}}_{{.Provider}}.box",
    "type":   "vagrant"
  }]
}